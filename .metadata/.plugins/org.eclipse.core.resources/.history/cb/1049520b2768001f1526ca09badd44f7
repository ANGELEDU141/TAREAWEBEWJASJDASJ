package pe.senati.Controller;

import java.util.Map;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;


@Controller
public class HomeController {


	public HomeController() {
		
		
		}
	
	
	@GetMapping("/entrada")
	public String bienvenido_GET(Map map) {
		map.put("empresa","ZEUS");
		map.put("celular","+51 928167222");
		map.put("email", "avavia@gmail.com");
		map.put("ciudad", "Lima");
		
		return "bienvenido";
	}
	
	@GetMapping("/Portada")
	public String puerta_GET() {
		return "puerta";
	}

	@GetMapping("/Inicio")
	public String contenido_GET() {
		return "contenido";
	}
	
	@GetMapping("/Concepto")
	public String definición_GET() {
		return "definición";
	}
	
	@GetMapping("/contacto")
	public String contacto_GET(Map map) {
		map.put("empresa","ZEUS");
		map.put("celular","+51 928167222");
		map.put("email", "avavia@gmail.com");
		map.put("ciudad", "Lima");
		
		
		return "contacto";
	}
	
	
}
